{
  "name": "@theniledev/data-plane-with-pulumi",
  "description": "reconcile nile instances with pulumi deployment",
  "version": "0.1.0",
  "author": "nile",
  "private": true,
  "bin": {
    "nile": "./bin/run"
  },
  "dependencies": {
    "@oclif/core": "^1",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^2.0.1",
    "@pulumi/aws": "^5.10.0",
    "@pulumi/awsx": "^0.40.0",
    "@pulumi/pulumi": "^3.36.0",
    "@theniledev/js": "^0.19.1",
    "@types/node-fetch": "^2.6.2",
    "dotenv": "^16.0.1",
    "fs": "^0.0.1-security",
    "node-emoji": "^1.11.0",
    "node-fetch": "^3.2.10"
  },
  "devDependencies": {
    "@types/node": "^18.6.3",
    "chai": "^4",
    "eslint": "^8.21.0",
    "eslint-config-oclif": "^4",
    "eslint-config-oclif-typescript": "^1.0.2",
    "globby": "^11",
    "oclif": "^3",
    "shx": "^0.3.3",
    "ts-node": "^10.2.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  },
  "engines": {
    "node": ">=18.9.0"
  },
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "keywords": [
    "oclif"
  ],
  "main": "dist/index.js",
  "oclif": {
    "bin": "nile",
    "dirname": "nile",
    "commands": "dist/commands",
    "plugins": [],
    "topicSeparator": " ",
    "topics": {
      "reconcile": {
        "description": "synchronize nile instances with pulumi deployment"
      }
    }
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "docker-reconcile": "yarn build && ts-node src/reconciler.ts",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "yarn lint",
    "prepack": "yarn build && oclif manifest && oclif readme",
    "prereconcile": "yarn --cwd ../../quickstart/ install && yarn --cwd ../../quickstart/ start",
    "reconcile": "yarn build && ts-node src/reconciler.ts",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "types": "dist/index.d.ts"
}
